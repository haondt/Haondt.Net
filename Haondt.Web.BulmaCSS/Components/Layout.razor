@using Haondt.Web.Core.Components
@using Haondt.Web.Core.Extensions

@code {
    [Parameter]
    public required IComponent Content { get; set; }
    [Parameter]
    public required NavigationBar NavigationBar { get; set; }
}


<div id="navigation">
    <Haondt.Web.Components.ObjectComponentT Component="NavigationBar"/>
</div>
<div id="toast-container"></div>
<div id="modal" class="modal"></div>
<div id="content">
    <Haondt.Web.Components.ObjectComponent Component="Content"/>
</div>
<div id="fill-content" style="flex-grow:1;overflow-y:auto;"></div>


